@model BusinessLayer.Dto.Game.GameViewDto
@{
    ViewData["Title"] = Model.Title;
}

<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet" />
<style>
    body {
        font-family: 'Inter', sans-serif;
        background: linear-gradient(to bottom, #0f0f1a, #1e1e2e);
        color: #e5e7eb;
    }

    .hero {
        position: relative;
        background-image: url('@Model.CoverImagePath');
        background-size: cover;
        background-position: center;
        height: 60vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .hero::before {
        content: "";
        position: absolute;
        inset: 0;
        background: rgba(0, 0, 0, 0.7);
    }

    .hero h1 {
        position: relative;
        font-size: 3rem;
        color: #facc15;
        z-index: 1;
        text-shadow: 0 2px 10px rgba(0,0,0,0.6);
    }

    .content {
        max-width: 900px;
        margin: 60px auto;
        padding: 2rem;
        background-color: #1f2937;
        border-radius: 16px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
    }

    .section-title {
        font-size: 1.75rem;
        margin-bottom: 1rem;
        color: #facc15;
    }

    .technologies span {
        background: #334155;
        padding: 0.4rem 0.8rem;
        border-radius: 20px;
        margin-right: 0.5rem;
        font-size: 0.9rem;
        display: inline-block;
        margin-bottom: 0.5rem;
    }

    .play-btn {
        display: inline-block;
        margin-top: 2rem;
        background-color: #facc15;
        color: #1f2937;
        padding: 0.75rem 1.5rem;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 600;
        transition: background-color 0.2s ease;
    }

    .play-btn:hover {
        background-color: #eab308;
        color: #000;
    }

    .trailer video {
        width: 100%;
        border-radius: 12px;
        margin-top: 2rem;
    }

    .back-link {
        display: block;
        margin: 2rem auto 0;
        text-align: center;
        color: #cbd5e1;
        text-decoration: underline;
        font-size: 0.9rem;
    }
</style>

<div class="hero">
    <h1>@Model.Title</h1>
</div>

<div class="content">
    <div class="mb-4">
        <h2 class="section-title">Game Overview</h2>
        <p>@Model.DetailedDescription</p>
    </div>

    <div class="mb-4">
        <h2 class="section-title">Key Systems & Features</h2>
        <div class="technologies">
            @foreach (var tech in Model.DevelopmentHighlights)
            {
                <span>@tech</span>
            }
        </div>
    </div>

    @if (!string.IsNullOrWhiteSpace(Model.TrailerUrl))
    {
        <div class="trailer mb-4">
            <h2 class="section-title">Gameplay Preview</h2>
            <video controls poster="@Model.CoverImagePath">
                <source src="@Model.TrailerUrl" type="video/mp4" />
                Your browser does not support the video tag.
            </video>
        </div>
    }

    <div class="text-center">
        <a href="@Model.WebGLPath" class="play-btn" target="_blank">▶ Play Now</a>
    </div>

    <a class="back-link" href="/Game">← Back to All Games</a>
</div>
