@model IEnumerable<BusinessLayer.Dto.Game.GameViewDto>

@{
    ViewData["Title"] = "Game Development";
}

<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet" />
<link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet" />

<style>
    body {
        font-family: 'Inter', sans-serif;
        background: linear-gradient(to bottom, #0f0f1a, #1e1e2e);
        color: #e5e7eb;
    }

    section {
        padding: 80px 0;
    }

    .games-section {
        background-color: #0f0f1a;
    }

    h1, h5 {
        font-weight: 600;
        color: #facc15;
        margin-bottom: 1rem;
    }

    .intro-text {
        font-size: 1.125rem;
        line-height: 1.6;
        margin-bottom: 2rem;
        color: #d1d5db;
    }

    .card {
        border: none;
        border-radius: 12px;
        box-shadow: 0 6px 20px rgb(0 0 0 / 0.3);
        background-color: #1f2937;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .card:hover {
        transform: translateY(-6px);
        box-shadow: 0 12px 30px rgba(250, 204, 21, 0.2);
    }

    .card-img-top {
        border-top-left-radius: 12px;
        border-top-right-radius: 12px;
        object-fit: cover;
        height: 200px;
        transition: transform 0.3s ease;
    }

    .card:hover .card-img-top {
        transform: scale(1.05);
    }

    .card-title {
        font-weight: 600;
        color: #facc15;
    }

    .card-text {
        color: #cbd5e1;
    }

    .btn-primary {
        background-color: #facc15;
        border-color: #facc15;
        color: #0f172a;
        font-weight: 600;
        transition: background-color 0.2s ease;
    }

    .btn-primary:hover {
        background-color: #eab308;
        border-color: #eab308;
        color: #000;
    }
</style>

<!-- Intro Section -->
<section class="intro-section">
    <div class="container">
        <h1 data-aos="fade-up">Game Development</h1>
        <p class="intro-text" data-aos="fade-up" data-aos-delay="100">
            In my free time, I work on 2D projects using Unity, building on the experience gained during my bachelor’s thesis focused on procedural RPG development. This sparked a long-term passion for game design and systems programming.
        </p>
        <p class="intro-text" data-aos="fade-up" data-aos-delay="200">
            Through ongoing projects, I explore gameplay mechanics, level generation, and performance optimization in Unity. I'm especially focused on building efficient systems and polished feel using C#.
        </p>
    </div>
</section>

<!-- Games Section -->
<section class="games-section">
    <div class="container">
        <h1 class="mb-4" data-aos="fade-right">Games Portfolio</h1>
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var game in Model)
            {
                <div class="col" data-aos="zoom-in-up">
                    <div class="card h-100">
                        <img src="@game.CoverImagePath" class="card-img-top" alt="@game.Title">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@game.Title</h5>
                            <p class="card-text flex-grow-1">@game.Description</p>
                            <div class="mt-auto">
                                <a href="@game.WebGLPath" class="btn btn-primary me-2" target="_blank" rel="noopener">Play</a>
                                <a href="/Game/Details/@game.Id" class="btn btn-primary">Details</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
<script>
    AOS.init({
        duration: 800,
        once: true
    });
</script>
