@model IEnumerable<BusinessLayer.Dto.Game.GameViewDto>

@{
    ViewData["Title"] = "Game Development";
}

<!-- Google Fonts + AOS Animations -->
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet" />
<link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet" />

<style>
    body {
        font-family: 'Inter', sans-serif;
        background: linear-gradient(to bottom, #f8fafc, #e2e8f0);
        color: #1e293b;
        scroll-behavior: smooth;
    }

    section {
        padding: 80px 0;
    }

    .intro-section {
        background-color: #f1f5f9;
    }

    .games-section {
        background-color: #ffffff;
    }

    h1 {
        font-weight: 600;
        color: #0f172a;
        margin-bottom: 1rem;
    }

    .intro-text {
        font-size: 1.125rem;
        line-height: 1.6;
        margin-bottom: 2rem;
        color: #334155;
    }

    .card {
        border: none;
        border-radius: 10px;
        box-shadow: 0 4px 15px rgb(0 0 0 / 0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        background-color: #ffffff;
    }

    .card:hover {
        transform: translateY(-8px);
        box-shadow: 0 12px 30px rgb(0 0 0 / 0.15);
    }

    .card-img-top {
        border-top-left-radius: 10px;
        border-top-right-radius: 10px;
        object-fit: cover;
        height: 200px;
        transition: transform 0.3s ease;
    }

    .card:hover .card-img-top {
        transform: scale(1.05);
    }

    .card-title {
        font-weight: 600;
        color: #0c4a6e;
    }

    .card-text {
        color: #475569;
    }

    .btn-primary {
        background-color: #0c4a6e;
        border-color: #0c4a6e;
        font-weight: 600;
        transition: background-color 0.2s ease;
    }

    .btn-primary:hover {
        background-color: #083358;
        border-color: #083358;
    }

    /* Optional parallax section */
    .parallax-section {
        background-image: url('/images/parallax.jpg'); /* replace with real image */
        background-attachment: fixed;
        background-size: cover;
        background-position: center;
        min-height: 400px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .overlay-text {
        background-color: rgba(0, 0, 0, 0.55);
        padding: 60px;
        border-radius: 10px;
        text-align: center;
    }

    .overlay-text h1,
    .overlay-text p {
        color: #fff;
    }
</style>

<!-- Optional: Parallax Hero Section -->
<section class="parallax-section">
    <div class="overlay-text" data-aos="zoom-in">
        <h1 class="display-4">Me and Game Development</h1>
        <p class="lead mt-3">Unity • Systems • Design • Performance</p>
    </div>
</section>

<!-- Intro Section -->
<section class="intro-section">
    <div class="container">
        <h1 data-aos="fade-up">About My Game Development</h1>
        <p class="intro-text" data-aos="fade-up" data-aos-delay="100">
            In my free time, I work on 2D projects using Unity, building on the experience gained during my bachelor’s thesis focused on procedural RPG development. This sparked a long-term passion for game design and systems programming. Through ongoing projects, I explore gameplay mechanics, level generation, and performance optimization in Unity.
        </p>
        <p class="intro-text" data-aos="fade-up" data-aos-delay="200">
            I've been passionate about games since childhood—not just playing, but understanding how they work. This curiosity evolved into creating my own games and fuels my drive to build immersive experiences using Unity and C#.
        </p>
    </div>
</section>

<!-- Games Section -->
<section class="games-section">
    <div class="container">
        <h1 class="mb-4" data-aos="fade-right">My Games</h1>
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var game in Model)
            {
                <div class="col" data-aos="zoom-in-up">
                    <div class="card h-100">
                        <img src="@game.CoverImagePath" class="card-img-top" alt="@game.Title">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@game.Title</h5>
                            <p class="card-text flex-grow-1">@game.Description</p>
                            <div class="mt-auto">
                                <a href="@game.WebGLPath" class="btn btn-primary me-2" target="_blank" rel="noopener">Play</a>
                                <a href="/Game/Details/@game.Id" class="btn btn-primary">Details</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<!-- AOS Scripts -->
<script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
<script>
    AOS.init({
        duration: 800,
        once: true
    });
</script>
