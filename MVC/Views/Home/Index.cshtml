<style>
    body {
        background-color: #0f0f1a;
        color: #e5e7eb;
        font-family: 'Inter', sans-serif;
        margin: 0;
        padding: 0;
    }

    .bg-yellow {
        background-color: #facc15;
        display: inline-block;
        padding: 0.25rem 1rem;
        border-radius: 0.25rem;
        color: #0f0f1a;
    }

    section {
        padding: 4rem 0;
    }

    section.bg-dark {
        background-color: #0d1117;
    }

    .text-primary {
        color: #facc15 !important;
    }

    ul li {
        margin-bottom: 0.5rem;
        font-size: 1.125rem;
    }

    .fade-in-section {
        opacity: 0;
        transform: translateY(30px);
        transition: opacity 0.6s ease-out, transform 0.6s ease-out;
    }

    .fade-in-section.visible {
        opacity: 1;
        transform: translateY(0);
    }

    .hero-section {
        height: 100vh;
        margin: 0;
        padding: 0;
        background-color: #0f0f1a;
        color: #facc15;
        font-family: 'Inter', sans-serif;
        position: relative;
    }

    .hero-section .overlay {
        height: 100%;
        width: 100%;
        padding: 2rem;
    }

    .hero-section hr {
        z-index: 2;
        border: none;
        border-top: 4px solid white;
        width: 100%;
        position: absolute;
        bottom: 5%;
    }
    .hero-btn {
        font-weight: 600;
        padding: 0.75rem 2rem;
        margin: 0 1rem;
        transition: all 0.3s ease;
        clip-path: polygon(8% 0%, 100% 0%, 92% 100%, 0% 100%);
        position: relative;
        z-index: 1;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .hero-btn-light {
        background-color: #facc15;
        color: #0f0f1a;
        border: none;
    }

    .hero-btn-light:hover {
        background-color: #eab308;
        transform: scale(1.05);
        box-shadow: 0 8px 20px rgba(250, 204, 21, 0.3);
    }

    .hero-btn-outline {
        background-color: transparent;
        border: 2px solid #facc15;
        color: #facc15;
    }

    .hero-btn-outline:hover {
        background-color: #facc15;
        color: #0f0f1a;
        transform: scale(1.05);
        box-shadow: 0 8px 20px rgba(250, 204, 21, 0.3);
    }

    .hero-buttons {
        display: flex;
        gap: 2rem;
        flex-wrap: wrap;
        justify-content: center;
        margin-top: 2rem;
    }

    .section-divider {
        position: relative;
        margin-top: -1px;
        overflow: hidden;
        line-height: 0;
    }

    .section-title-highlight {
        background: linear-gradient(120deg, #facc15 0%, #fcd34d 100%);
        color: #0f0f1a;
        display: inline-block;
        padding: 0.2em 0.5em;
        border-radius: 0.25em;
        transform: skewX(-5deg);
    }

    .section-content {
        position: relative;
        z-index: 1;
    }

    .text-primary {
        color: #facc15 !important;
    }

    .icon-title {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    ul li {
        margin-bottom: 0.5rem;
        font-size: 1.125rem;
    }

    .section-alt {
        display: flex;
        flex-wrap: wrap;
        gap: 2rem;
        align-items: center;
        justify-content: space-between;
    }

    .section-alt.even .text-col {
        order: 2;
    }

    .section-alt .text-col,
    .section-alt .image-col {
        flex: 1 1 45%;
    }

    .section-alt .image-col {
        text-align: center;
    }

    .section-alt .image-col img {
        max-width: 100%;
        border-radius: 1rem;
        box-shadow: 0 4px 30px rgba(0,0,0,0.4);
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 2rem;
    }

    .hero-section {
        position: relative;
    }

    .hero-photo-transparent {
        position: absolute;
        bottom: 7%;
        right: 5%;
        width: 300px;
        max-width: 30vw;
        pointer-events: none; /* So clicks pass through */
        filter: drop-shadow(0 0 10px rgba(250, 204, 21, 0.6));
        user-select: none;
        z-index: 1;
        transition: transform 0.3s ease;
    }
    .hero-photo-transparent:hover {
        transform: scale(1.05);
    }
</style>

